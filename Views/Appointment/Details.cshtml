@model ProjectoFinal_LR.Models.Appointment

@{
    ViewData["Title"] = "Details";
}

<div class="section-header">
    <h1>Consultas</h1>
    <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/Home/Index">Início</a></div>
        <div class="breadcrumb-item active"><a asp-controller="Appointment" asp-action="List">Lista</a></div>
        <div class="breadcrumb-item">Detalhes</div>
    </div>
</div>
<div class="section-body">
    <h2 class="section-title">Detalhes consulta</h2>
    <div class="row">
        <div class="col-12">
             <div class="card card-primary">
                  <div class="card-body">
                    <div class="col-6">
                        <ul class="list-group">
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                Animal
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Animal.Name)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                Veterinário responsável
                            <span class="badge badge-primary badge-pill">
                                 @Html.DisplayFor(model => model.Veterinarian.Name)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Schedule)
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Schedule)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Observations)
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Observations)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Price)
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Price)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                Motivo consulta
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Motive.Description)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                Prioridade
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Priority.Type)
                            </span>
                          </li>
                        </ul>
                     </div>
                     <div class="col-12">
                        <div class="card-footer d-flex justify-content-between align-items-center mt-5 ">
                            <div>
                                <a asp-controller="Appointment" asp-action="List">Voltar à lista</a>
                            </div>
                            <div>
                                <a asp-action="Edit" class="btn btn-success" asp-route-idAppointment="@Model.IdAppointment"><i class="fa-solid fa-pen-to-square"></i></a>
                            </div>
                        </div>
                     </div>
                </div>
             </div>
        </div>
    </div>
</div>





