@model ProjectoFinal_LR.Models.Animal

@{
    ViewData["Title"] = "Details";
}


<div class="section-header">
	<h1>Animais</h1>
	<div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/Home/Index">Início</a></div>
        <div class="breadcrumb-item active"><a asp-controller="Animal" asp-action="List">Lista</a></div>
		<div class="breadcrumb-item">Detalhes</div>
	</div>
</div>
<div class="section-body">
	<h2 class="section-title">Detalhes animal</h2>
	<div class="row">
		<div class="col-12">
             <div class="card card-primary">
                  <div class="card-body">
                    <div class="col-6">
                        <ul class="list-group">
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Name)
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Name)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.BirthDate)
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.BirthDate)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Gender)
                            <span class="badge badge-primary badge-pill">
                                @(Model.Gender == 0 ? "M" : "F")
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                Dono
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Client.Name)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Specie)
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Specie.Name)
                            </span>
                          </li>
                          <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                                @Html.DisplayNameFor(model => model.Breed)
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayFor(model => model.Breed.Name)
                            </span>
                          </li>
                        </ul>
                     </div>
                     <div class="col-12">
                        <div class="card-footer d-flex justify-content-between align-items-center mt-5 ">
                            <div>
                                <a asp-controller="Animal" asp-action="List">Voltar à lista</a>
                            </div>
                            <div>
                                <a asp-action="Edit" class="btn btn-success" asp-route-idAnimal="@Model.IdAnimal"><i class="fa-solid fa-pen-to-square"></i></a>
                            </div>
                        </div>
                     </div>
                </div>
             </div>
		</div>
	</div>
</div>











